FROM python:3.10-slim
WORKDIR /app
COPY backend/ /app/
RUN pip install --no-cache-dir -r requirements.txt
EXPOSE 5000
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 CMD python -c "import socket; s=socket.socket(); s.settimeout(3); s.connect(('127.0.0.1',5000)); s.close()" || exit 1
CMD ["python", "-m", "backend.main"]
